# =========================
# --- Essentials ---
alias rg='rg -in -. --color=always'
alias grep='grep --color=always'
alias ls='ls -hp --color=auto'
alias lsa='ls -lA'
alias lss='ls -lAtr'
alias dua='du -hcs'
alias cdd="cd ..    		&& pwd"
alias cdg='cd ~/git 		&& lss'
alias cd_os='cd ~/git/open-source && lss'
alias cd_prefs='cd ~/git/my_prefs && lss'

